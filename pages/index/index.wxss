/**index.wxss**/
.image-list {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 600rpx;
  border: 2rpx solid #ccc;
  overflow-y: scroll;
}

.image-row {
  justify-content: space-between;
  width: 100%;
}

.image-item {
  width: 240rpx;
  height: 240rpx;
  object-fit: cover;
  border: 2rpx solid #ccc;
  margin: 4rpx;
  box-sizing: border-box;
}

.table {
  border: 2rpx solid #ccc;
  padding: 20rpx;
}

.table-row {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #ccc;
}

.header {
  font-weight: bold;
}

.table-cell {
  flex: auto;
  padding: 16rpx;
  text-align: center;
}